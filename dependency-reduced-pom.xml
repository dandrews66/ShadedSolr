<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.sysalli.shade</groupId>
  <artifactId>solr-repacked</artifactId>
  <version>7.1.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>org.apache.solr</pattern>
                  <shadedPattern>org.apache.shaded.solr</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.httpcomponents</pattern>
                  <shadedPattern>org.apache.shaded.httpcomponents</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.commons</pattern>
                  <shadedPattern>org.apache.shaded.commons</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>commons-io</pattern>
                  <shadedPattern>commons-io.shaded</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.codehaus.woodstox</pattern>
                  <shadedPattern>org.codehaus.shaded.woodstox</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.codehaus.stax2</pattern>
                  <shadedPattern>org.codehaus.shaded.stax2</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.noggit</pattern>
                  <shadedPattern>org.shaded.noggit</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.slf4j</pattern>
                  <shadedPattern>org.shaded.slf4j</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.http</pattern>
                  <shadedPattern>org.apache.shaded.http</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.ctc.wstx</pattern>
                  <shadedPattern>com.ctc.shaded.wstx</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <includes>
              <include>org.apache.solr:solr-solrj</include>
              <include>org.apache.httpcomponents:httpclient</include>
              <include>org.apache.httpcomponents:httpcore</include>
              <include>org.apache.httpcomponents:httpmime</include>
              <include>org.apache.commons:commons-math3</include>
              <include>commons-io:commons-io</include>
              <include>org.codehaus.woodstox:stax2-api</include>
              <include>org.codehaus.woodstox:woodstox-core-asl</include>
              <include>org.noggit:noggit</include>
              <include>org.slf4j:jcl-over-slf4j</include>
              <include>org.slf4j:slf4j-api</include>
            </includes>
          </artifactSet>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>

